# Port the Express server listens on locally
PORT=5000

# MongoDB connections for development (primary) and production (fallback when testing prod paths)
MONGODB_URI_DEV=mongodb+srv://<dev-username>:<dev-password>@<cluster-host>/scorebugger_dev
MONGODB_URI_PROD=mongodb+srv://<prod-username>:<prod-password>@<cluster-host>/scorebugger

# JWT secret that signs development tokens; keep this unique per environment
JWT_SECRET=dev-secret-change-me

# Origins allowed for local clients; include Vite dev server by default
CLIENT_ORIGIN=http://localhost:5173

# Base URL injected into transactional emails and deep links
APP_BASE_URL=http://localhost:5173

# Optional mailer configuration for local testing
EMAIL_FROM=dev@example.com
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Optional Node.js version pin for hosts like Render
NODE_VERSION=22
