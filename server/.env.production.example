# Port the server listens on in production hosting
PORT=5000

# MongoDB Atlas connection strings; production is required, dev is optional for smoke checks
MONGODB_URI_PROD=mongodb+srv://<prod-username>:<prod-password>@<cluster-host>/scorebugger
MONGODB_URI_DEV=

# Strong, unique secret for signing production JWTs
JWT_SECRET=

# Comma-separated list of allowed client origins (include the deployed front-end URL)
CLIENT_ORIGIN=https://app.scorebugger.com

# Absolute base URL surfaced in transactional emails/webhooks
APP_BASE_URL=https://app.scorebugger.com

# Optional transactional email credentials used in production
EMAIL_FROM=Scorebugger <noreply@scorebugger.com>
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=true

# Optional Node.js version pin for hosts like Render
NODE_VERSION=22
